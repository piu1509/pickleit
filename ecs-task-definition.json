{
  "family": "pickleit-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::891612575851:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::891612575851:role/ecsTaskRoleWithExec",
  "containerDefinitions": [
    {
      "name": "web",
      "image": "891612575851.dkr.ecr.ap-southeast-2.amazonaws.com/pickleit:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 8000,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "DJANGO_SETTINGS_MODULE",
          "value": "myproject.settings"
        },
        {
          "name": "REDIS_URL",
          "value": "redis://127.0.0.1:6379/1"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/pickleit",
          "awslogs-region": "ap-southeast-2",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "dependsOn": [
        {
          "containerName": "redis",
          "condition": "START"
        }
      ]
    },
    {
      "name": "redis",
      "image": "redis:6",
      "essential": false,
      "portMappings": [
        {
          "containerPort": 6379,
          "protocol": "tcp"
        }
      ]
    }
  ]
}
